{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "allowJs": true,
    "noEmit": false,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "controllers/**/*",
    "middlewares/**/*",
    "models/**/*",
    "routers/**/*",
    "services/**/*",
    "socket/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}